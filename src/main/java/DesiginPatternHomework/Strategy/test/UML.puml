@startuml Strategy Pattern Test - Payment System

title 策略模式测试示例 - 支付系统

interface PayStrategy {
    + pay(amount: double): void
}

class AliPay {
    + pay(amount: double): void
}

class WeChatPay {
    + pay(amount: double): void
}

class CreditCardPay {
    + pay(amount: double): void
}

class CashPay {
    + pay(amount: double): void
}

class ShoppingCart {
    - payStrategy: PayStrategy
    + setPayStrategy(payStrategy: PayStrategy): void
    + checkout(amount: double): void
}

PayStrategy <|.. AliPay
PayStrategy <|.. WeChatPay
PayStrategy <|.. CreditCardPay
PayStrategy <|.. CashPay

ShoppingCart o-- PayStrategy : 聚合

